<h1>
  <%= @location.name %>
</h1>

<p>
  <%= link_to 'Delete this location?', location_path(@location.id), method: :delete, data: {confirm: "Are you sure you want to delete #{@location.name}?"} %>
</p>

<p>
  <%= link_to 'Edit', edit_location_path(@location.id) %>
</p>

<ul>
  <% @courses.each do |course| %>
    <li>
      <%= link_to "#{course.name}", course_path(course.id) %>
    </li>

    <% @instructors.each do |instr| %>
      <% if course.id == instr.course_id %>
        <ul>
          <li>
            <%= link_to "#{instr.name}", instructor_path(instr.id) %>

            <% if instr.ta %>
              <span> (TA)</span>
            <% end %>
          </li>
        </ul>
      <% end %>
    <% end %>
  <% end %>
</ul>
