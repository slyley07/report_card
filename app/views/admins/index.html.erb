<h1>
  Sign up
<h1>

<%= form_for @admin do |f| %>
  <% if @admin.errors.any? %>
    <% @admin.errors.full_messages.each do |error| %>
      <p>
        <%= error %>
      </p>
    <% end %>
  <% end %>

  <%= f.text_field :email, placeholder: :email %>
  <br>
  <%= f.password_field :password, placeholder: :password %>
  <br>
  <%= f.password_field :password_confirmation, placeholder: :password_confirmation %>
  <br>

  <%= f.submit 'Sign up' %>
<% end %>
